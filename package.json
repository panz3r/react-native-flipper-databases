{
  "name": "react-native-flipper-databases",
  "version": "2.2.1",
  "description": "Flipper Databases plugin for React Native",
  "main": "lib/commonjs/index.js",
  "module": "lib/module/index.js",
  "types": "lib/typescript/index.d.ts",
  "react-native": "src/index.ts",
  "source": "src/index",
  "files": [
    "src",
    "lib",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__",
    "!lib/typescript/example"
  ],
  "scripts": {
    "setup": "yarn install",
    "prepare": "husky install && bob build",
    "typescript": "tsc --noEmit",
    "lint": "eslint \"**/*.{js,ts,tsx}\"",
    "test": "jest",
    "build": "bob build",
    "prerelease": "run-s typescript lint test build",
    "release": "release-it",
    "bootstrap": "run-s setup example:* pods:*",
    "example:watermelon": "yarn --cwd example",
    "pods:watermelon": "cd example && pod-install --quiet",
    "example:realm": "yarn --cwd example2",
    "pods:realm": "cd example2 && pod-install --quiet",
    "example:pouch": "yarn --cwd example3",
    "pods:pouch": "cd example3 && pod-install --quiet",
    "example:vasern": "yarn --cwd example4",
    "pods:vasern": "cd example4 && pod-install --quiet"
  },
  "keywords": [
    "react-native",
    "ios",
    "android",
    "flipper",
    "databases",
    "development"
  ],
  "repository": "https://github.com/panz3r/react-native-flipper-databases",
  "author": "Mattia Panzeri <mattia.panzeri93@gmail.com> (https://github.com/panz3r)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/panz3r/react-native-flipper-databases/issues"
  },
  "homepage": "https://github.com/panz3r/react-native-flipper-databases#readme",
  "funding": [
    {
      "type": "kofi",
      "url": "https://ko-fi.com/panz3r"
    },
    {
      "type": "buymeacoffee",
      "url": "https://buymeacoff.ee/4f18nT0Nk"
    }
  ],
  "devDependencies": {
    "@commitlint/config-conventional": "^16.0.0",
    "@nozbe/watermelondb": ">=0.24",
    "@react-native-community/eslint-config": "^3.0.0",
    "@release-it/conventional-changelog": "^4.1.0",
    "@types/jest": "^27.0.0",
    "@types/react": "^17.0.15",
    "@types/react-native": "^0.67.0",
    "commitlint": "^16.0.1",
    "eslint": "7.32.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-prettier": "4.0.0",
    "husky": "^7.0.1",
    "jest": "^27.1.0",
    "npm-run-all": "^4.1.5",
    "pod-install": "^0.1.0",
    "prettier": "^2.0.2",
    "react": "17.0.2",
    "react-native": "0.67.3",
    "react-native-builder-bob": "^0.18.1",
    "react-native-flipper": "^0.138.0",
    "realm": "^10.9.1",
    "release-it": "^14.6.2",
    "typescript": "^4.1.3"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*",
    "react-native-flipper": "*"
  },
  "optionalDependencies": {
    "@nozbe/watermelondb": ">=0.24",
    "realm": "*"
  },
  "prettier": {
    "quoteProps": "consistent",
    "singleQuote": true,
    "printWidth": 90,
    "tabWidth": 2,
    "trailingComma": "es5",
    "arrowParens": "avoid",
    "useTabs": false
  },
  "eslintConfig": {
    "extends": [
      "@react-native-community",
      "prettier"
    ],
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "quoteProps": "consistent",
          "singleQuote": true,
          "printWidth": 90,
          "tabWidth": 2,
          "trailingComma": "es5",
          "arrowParens": "avoid",
          "useTabs": false
        }
      ]
    }
  },
  "eslintIgnore": [
    "node_modules/",
    "lib/"
  ],
  "jest": {
    "preset": "react-native",
    "modulePathIgnorePatterns": [
      "<rootDir>/example/node_modules",
      "<rootDir>/lib/"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}"
    },
    "npm": {
      "publish": true
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "angular"
      }
    }
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      "commonjs",
      "module",
      [
        "typescript",
        {
          "project": "tsconfig.build.json"
        }
      ]
    ]
  }
}
